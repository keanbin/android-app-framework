<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.keanbin.framework.widget.CustomViewPager
        android:id="@+id/vp_activityStartAnimation_viewPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_activityStartAnimation_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/imagelost"
            android:scaleType="matrix"
            android:src="@drawable/icon_page_index_now" />

        <ImageView
            android:id="@+id/iv_activityStartAnimation_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/imagelost"
            android:scaleType="matrix"
            android:src="@drawable/icon_page_index" />

        <ImageView
            android:id="@+id/iv_activityStartAnimation_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/imagelost"
            android:scaleType="matrix"
            android:src="@drawable/icon_page_index" />

        <ImageView
            android:id="@+id/iv_activityStartAnimation_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/imagelost"
            android:scaleType="matrix"
            android:src="@drawable/icon_page_index" />

        <ImageView
            android:id="@+id/iv_activityStartAnimation_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/imagelost"
            android:scaleType="matrix"
            android:src="@drawable/icon_page_index" />

        <ImageView
            android:id="@+id/iv_activityStartAnimation_06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/imagelost"
            android:scaleType="matrix"
            android:src="@drawable/icon_page_index" />
    </LinearLayout>

</FrameLayout>