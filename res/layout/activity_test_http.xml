<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android:id="@+id/btn_activityTestHttp_testGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Get" />

    <Button
        android:id="@+id/btn_activityTestHttp_testPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Post" />

    <Button
        android:id="@+id/btn_activityTestHttp_testGetJsonFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test GetJsonFile" />

    <Button
        android:id="@+id/btn_activityTestHttp_testPostJsonFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test PostJsonFile" />

    <Button
        android:id="@+id/btn_activityTestHttp_testUploadFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Upload File" />

    <Button
        android:id="@+id/btn_activityTestHttp_testUploadFileParam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Upload File Param" />

    <Button
        android:id="@+id/btn_activityTestHttp_testUploadMultFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Upload Mult File" />

    <Button
        android:id="@+id/btn_activityTestHttp_testUploadMultFileParam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Upload Mult File Param" />

    <Button
        android:id="@+id/btn_activityTestHttp_testDownloadFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Download File" />

    <Button
        android:id="@+id/btn_activityTestHttp_testStopHttp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Stop Http" />

    <ProgressBar
        android:id="@+id/pb_activityTestHttp_pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />

</LinearLayout>